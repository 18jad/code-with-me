// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int       @id @default(autoincrement())
  name           String
  username       String    @db.VarChar(15)
  email          String
  password       String
  headline       String?   @db.VarChar(100)
  avatar         String?
  likes          Int       @default(0)
  projectsCount  Int       @default(0)
  favoritesCount Int       @default(0)
  projects       Project[]
  favorites      Int[]     @default([])
  resetToken     String    @default(cuid())
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  @@unique([email, username, resetToken])
}

model Project {
  id            Int      @id @default(autoincrement())
  title         String   @unique @db.VarChar(20)
  description   String   @db.VarChar(80)
  author        User     @relation(fields: [authorId], references: [id])
  authorId      Int
  allowedUsers  Int[]    @default([])
  likes         Int      @default(0)
  fileStructure Json     @db.Json
  githubRepo    Json     @default("{}") @db.Json
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
